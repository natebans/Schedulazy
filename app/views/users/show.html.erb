<div class="container mt-5">
  <div class="card rounded-4 px-3 py-2 mt-5" style="display: inline-block;">
    <div>
      <h1>My account</h1>
      <%# include edit name(s) link %>
      <p style="color: #563635;"><%= current_user.first_name %> <%= current_user.last_name %></p>
      <%# include edit email link %>
      <p style="color: #563635;"><%= current_user.email %></p>
      <p>
        <%= link_to "Edit/Delete your account", edit_user_registration_path, class: "btn btn-delete" %>
      </p>
      <p>
        <%= link_to "Back to My Itineraries", itineraries_path, class: "btn btn-flat" %>
      </p>
    </div>
  </div>
</div>
