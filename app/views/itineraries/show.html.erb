<div class="itinerary">

    <div class="banner" style="background-image: linear-gradient(rgba(0, 0, 0, 0.4),rgba(0,0,0,0.4)), url(<%= asset_path 'athens.avif' %>)">
      <div class="container">
        <h1>Enjoy amazing holidays in Boston</h1>
        <p>A new amazing adventure is waiting for you</p>
        <a class="btn btn-flat" href="#">Apply now</a>
      </div>
    </div>



    <div class="activities">
      <% @itinerary.itinerary_activity_joins.each do |join| %>
        <div class="card" style="width: 18rem;" data-bs-toggle="modal" data-bs-target="#exampleModal<%= join.id %>">
          <%= image_tag "market.jpeg" %>
          <div class="card-body">
            <h1 style="text-decoration: underline"> <%= join.activity.category %> </h1>
            <p> <strong>Duration:</strong> <%= join.activity.duration %> minutes </p>
            <%= link_to "Delete", itinerary_activity_join_path(join), class: "btn btn-outline-danger",
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          </div>
        </div>
        <div class="modal fade" id="exampleModal<%= join.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><%= join.activity.category %></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <div class="picture">
                  <%= image_tag "market.jpeg" %>
                </div>
                <%# name of activity %>
                <p> <strong>Address:</strong> <%= join.activity.address %> </p>
                <p> <strong>Duration:</strong> <%= join.activity.duration %> minutes </p>
                <p> <strong>From â‚¬</strong><%= join.activity.price %> per person </p>
                <%# link to activity %>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-flat" data-bs-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>
</div>
<%#= raise %>
